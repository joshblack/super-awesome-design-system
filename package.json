{
  "name": "super-awesome-design-system",
  "private": true,
  "license": "MIT",
  "workspaces": [
    "config/*",
    "components/*",
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write '**/*.{js,md,scss,yml,ts}' '!**/{build,es,lib,storybook-static}/**'",
    "format:diff": "prettier --list-different '**/*.{js,md,scss,yml,ts}' '!**/{build,es,lib,storybook-static}/**'"
  },
  "devDependencies": {
    "prettier": "^2.3.1",
    "prettier-config-sads": "workspace:packages/prettier-config-sads"
  }
}
